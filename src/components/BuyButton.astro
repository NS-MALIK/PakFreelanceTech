---
export interface Props {
  url: string;
  label: string;
}

const { url, label } = Astro.props;
---

<div class="button-container">
  <a href={url} target="_blank" rel="sponsored nofollow" class="buy-button">
    <span>{label}</span>
    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="external-icon"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
  </a>
</div>

<style>
  .button-container {
    display: flex;
    justify-content: center;
    margin: 2.5rem 0;
  }

  .buy-button {
    /* Uses your custom --accent variable */
    background-color: var(--accent);
    
    /* Text color: Background in light mode, dark navy in dark mode for contrast */
    color: var(--background) !important; 
    
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 14px 32px;
    border-radius: 10px;
    font-weight: 800;
    text-decoration: none !important;
    letter-spacing: 0.5px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    
    /* Subtle shadow that uses the border color for a natural look */
    box-shadow: 0 4px 14px 0 rgba(0, 102, 204, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  /* Dark mode specific shadow adjustment */
  :global(html[data-theme="dark"]) .buy-button {
    box-shadow: 0 0 20px rgba(56, 189, 248, 0.2);
    color: #0f172a !important; /* Ensures text is readable on Electric Blue */
  }

  .buy-button:hover {
    transform: translateY(-3px);
    filter: brightness(1.1);
    box-shadow: 0 8px 25px rgba(0, 102, 204, 0.4);
  }

  :global(html[data-theme="dark"]) .buy-button:hover {
    box-shadow: 0 0 30px rgba(56, 189, 248, 0.4);
  }

  .external-icon {
    transition: transform 0.3s ease;
  }

  .buy-button:hover .external-icon {
    transform: translate(3px, -3px);
  }
</style>