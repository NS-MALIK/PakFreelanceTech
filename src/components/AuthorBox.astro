---
const { author = "Naila Malik" } = Astro.props;
---

<section 
  class="author-box-container group mt-16 p-8 rounded-2xl border border-skin-line transition-all duration-300 hover:shadow-2xl hover:shadow-accent/10"
  itemscope itemtype="https://schema.org/Person"
>
  <div class="flex flex-col md:flex-row items-center gap-8">
    
    <div class="relative">
      <div class="w-28 h-28 rounded-2xl bg-gradient-to-br from-accent to-blue-600 rotate-3 group-hover:rotate-6 transition-transform duration-300 absolute inset-0 -z-10 opacity-20"></div>
      <div 
        class="w-28 h-28 rounded-2xl bg-accent flex items-center justify-center text-white text-4xl font-black shadow-xl"
        itemprop="image"
      >
        {author.charAt(0)}
      </div>
    </div>

    <div class="flex-1 text-center md:text-left">
      <header>
        <p class="text-accent text-xs font-bold uppercase tracking-widest mb-1">Written By</p>
        <h3 class="text-2xl font-bold text-skin-base mb-3" itemprop="name">
          {author}
        </h3>
      </header>

      <p class="text-skin-base opacity-80 leading-relaxed mb-6 max-w-xl" itemprop="description">
        Expert in Pakistan's freelance ecosystem and tech hardware. Helping thousands of remote workers choose the right tools for their digital careers at <strong>PakFreelanceTech</strong>.
      </p>

      <nav class="flex justify-center md:justify-start gap-4" aria-label="Author Social Media">
      <a 
    href={`https://api.whatsapp.com/send?text=Check out this guide on PakFreelanceTech: ${Astro.url}`}
    target="_blank"
    rel="noopener noreferrer"
    class="flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-bold border border-[#25D366] text-[#25D366] transition-all duration-200 hover:bg-[#25D366] hover:text-white hover:-translate-y-1"
  >
    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 1 1-7.6-11.7 8.38 8.38 0 0 1 3.8.9L21 3z"></path></svg>
    <span>Share on WhatsApp</span>
  </a>
        <a 
          href="https://linkedin.com/in/nailamalik" 
          itemprop="url" 
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-medium border border-skin-line transition-all duration-200 hover:border-accent hover:text-accent hover:bg-accent/5 hover:-translate-y-1"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path><rect x="2" y="9" width="4" height="12"></rect><circle cx="4" cy="4" r="2"></circle></svg>
          <span>LinkedIn</span>
        </a>
        
        <a 
          href="https://twitter.com/pakfreelancetech" 
          itemprop="url" 
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-medium border border-skin-line transition-all duration-200 hover:border-accent hover:text-accent hover:bg-accent/5 hover:-translate-y-1"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path></svg>
          <span>Twitter</span>
        </a>
      </nav>
    </div>
  </div>
</section>

<style>
  .author-box-container {
    /* Uses your --muted variable for a background that matches the theme */
    background: linear-gradient(to bottom right, var(--muted), var(--background));
    position: relative;
    overflow: hidden;
  }

  /* Interactive glow effect for Dark Mode */
  :global(html[data-theme="dark"]) .author-box-container::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle at center, var(--accent) 0%, transparent 70%);
    opacity: 0.05;
    pointer-events: none;
  }
</style>